<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ScrollView
            android:id="@+id/mainContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:id="@+id/mainContentLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <Button
                    android:id="@+id/btn_konosuna_delete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/btn_konosuna_delete"
                    android:textStyle="bold"/>

            <Button
                    android:id="@+id/btn_konosuna_pull"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/btn_konosuna_pull"
                    android:textStyle="bold"/>

            <EditText
                    android:id="@+id/accountNo"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="textPersonName"
                    android:text=""
                    android:ems="10"/>

            <Button
                    android:id="@+id/btn_konosuna_read"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/btn_konosuna_read"
                    android:textStyle="bold"/>

            <Button
                    android:id="@+id/btn_konosuna_upload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/btn_konosuna_upload"
                    android:textStyle="bold"/>

            <EditText
                    android:id="@+id/transAccount"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="textPersonName"
                    android:text=""
                    android:ems="10"/>

            <EditText
                    android:id="@+id/info"
                    android:text=""
                    android:inputType="textMultiLine"
                    android:layout_width="match_parent"
                    android:layout_height="186dp"
                    android:gravity="top"
                    android:autofillHints=""
                    tools:layout_editor_absoluteY="369dp"
                    tools:layout_editor_absoluteX="135dp"/>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
